                                {% for post in posts %}

                                <div class="masonry-item no-default-style col-md-6" style="position: absolute; left: 0px; top: 0px;">
                                    <article class="post post-medium border-0 pb-0 mb-5">
                                        <div class="post-image">
                                            <a href="blog-post.html">
