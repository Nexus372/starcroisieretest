                                                <div class="date p-absolute z-index-2 top-10 right-10 mr-0 mr-3 pl-1 pt-1">
                                                    <span class="day bg-color-light font-weight-extra-bold py-2 text-color-dark">{{ post.createdAt|date('d') }}</span>
                                                    <span class="month text-1 bg-color-light line-height-9 text-default w-100 top-2 d-block py-0"><span class="text-1">{{ post.createdAt|date('M')|upper }}</span></span>
                                                </div>
                                            </a>
                                        </div>

                                        <div class="post-content bg-color-light p-4">

                                            <h2 class="font-weight-bold text-5 line-height-6 mt-0 mb-2"><a href="blog-post.html">{{ post.title }}</a></h2>
                                            {{ post.content|raw }}

